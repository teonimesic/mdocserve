{
  "name": "mdocserve-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "React SPA frontend for mdocserve - markdown documentation server",
  "author": "Stefano Benatti <stefano@heavenstudio.com.br>",
  "repository": {
    "type": "git",
    "url": "https://github.com/teonimesic/mdocserve.git"
  },
  "homepage": "https://github.com/teonimesic/mdocserve#readme",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "test": "vitest",
    "test:ci": "vitest run --reporter=verbose --no-watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:browser": "BROWSER_MODE=true vitest --browser",
    "test:browser:ui": "BROWSER_MODE=true vitest --browser --ui",
    "test:browser:headed": "BROWSER_MODE=true vitest --browser --browser.headless=false",
    "test:visual": "BROWSER_MODE=true vitest run --browser --config vitest.visual.config.ts",
    "test:e2e": "playwright test --reporter=list --max-failures=1",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "build:e2e": "npm run build && cd .. && cargo build --release && cd frontend && npm run test:e2e"
  },
  "dependencies": {
    "marked": "^17.0.0",
    "marked-gfm-heading-id": "^4.1.3",
    "mermaid": "^11.12.1",
    "prismjs": "^1.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^4.0.9",
    "@vitest/browser-playwright": "^4.0.9",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.47.0",
    "vite": "^6.0.1",
    "vitest": "^4.0.9"
  }
}
